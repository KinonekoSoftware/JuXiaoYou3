    <!--
        @ param: GroupBlock
        @ member:
            1. RadioBlock
            2. SequenceBlock
            3. GroupBlock
            4. OptionItem
    -->

    <DataTemplate DataType="{x:Type subTemp:SequenceBlockEditUI}">
        <Grid Background="Transparent"
              Height="320"
              Width="768">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="384" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <StackPanel>
                <UniformGrid Columns="2">
                    <f:HeaderedSingleLine Header="{f:Language global.name}"
                                          Margin="4"
                                          Text="{Binding Name,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />

                    <f:HeaderedSingleLine Header="{f:Language global.metadata}"
                                          Margin="4"
                                          Text="{Binding Metadata,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />

                    <f:HeaderedSingleLine Header="{f:Language global.fallback}"
                                          Margin="4"
                                          Text="{Binding Fallback,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                </UniformGrid>

                <f:ToggleSwitch Content="{f:Language global.diffValue}"
                                Margin="4 8"
                                IsChecked="{Binding AllowDiffValue,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                Visibility="Collapsed" />
                <f:HeaderedMultiLine Header="{f:Language global.tooltips}"
                                     Margin="4"
                                     Height="128"
                                     Text="{Binding ToolTips,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                     TextWrapping="Wrap" />
            </StackPanel>
            <f:ForestSection Grid.Column="1"
                             Header="{f:Language global.content}"

                             Margin="8 4">
                <f:ForestSection.ToolBar>
                    <StackPanel HorizontalAlignment="Right"
                                Orientation="Horizontal"
                                Margin="0 0 0 4">
                        <ftk:ToolButton Command="{Binding AddCommand}"
                                        Icon="{StaticResource FeatherIcon.Plus}" />
                        <ftk:ToolButton Command="{Binding EditCommand}"
                                        CommandParameter="{Binding ElementName=Item,Mode=OneWay,Path=SelectedItem}"
                                        Icon="{StaticResource FeatherIcon.Edit}" />
                        <ftk:ToolButton Command="{Binding RemoveCommand}"
                                        CommandParameter="{Binding ElementName=Item,Mode=OneWay,Path=SelectedItem}"
                                        Icon="{StaticResource FeatherIcon.Trash}" />
                        <ftk:ToolButton Command="{Binding UpCommand}"
                                        CommandParameter="{Binding ElementName=Item,Mode=OneWay,Path=SelectedItem}"
                                        Icon="{StaticResource FeatherIcon.Up}" />
                        <ftk:ToolButton Command="{Binding DownCommand}"
                                        CommandParameter="{Binding ElementName=Item,Mode=OneWay,Path=SelectedItem}"
                                        Icon="{StaticResource FeatherIcon.Down}" />
                    </StackPanel>
                </f:ForestSection.ToolBar>
                <f:ListBox x:Name="Item"
                           SelectedValue="{Binding Fallback,Mode=TwoWay}"
                           SelectedValuePath="Value"
                           ItemsSource="{Binding Items,Mode=OneWay}">
                    <f:ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Margin="8"
                                       Text="{Binding Value,Mode=OneWay}"
                                       TextTrimming="CharacterEllipsis" />
                        </DataTemplate>
                    </f:ListBox.ItemTemplate>
                </f:ListBox>
            </f:ForestSection>
        </Grid>
    </DataTemplate>

