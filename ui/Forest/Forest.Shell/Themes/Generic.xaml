    <Style TargetType="{x:Type c:EmptyContentHost}">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type c:EmptyContentHost}">
                    <Border VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch">
                        <Grid>
                            <ContentPresenter x:Name="Content" 
                                              Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Stretch"
                                              VerticalAlignment="Stretch"
                                              Visibility="Collapsed"/>
                            <ContentPresenter x:Name="EmptyState"
                                              Content="{TemplateBinding EmptyState}"
                                              ContentTemplate="{TemplateBinding EmptyStateTemplate}"
                                              ContentStringFormat="{TemplateBinding EmptyStateStringFormat}"
                                              ContentTemplateSelector="{TemplateBinding EmptyStateTemplateSelector}"
                                              HorizontalAlignment="Stretch"
                                              VerticalAlignment="Stretch"
                                              Visibility="Collapsed"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEmptyState" Value="True">
                            <Setter Property="Visibility" Value="Visible" TargetName="EmptyState"/>
                        </Trigger>
                        <Trigger Property="IsEmptyState" Value="False">
                            <Setter Property="Visibility" Value="Visible" TargetName="Content"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type c:ViewHost}">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type c:ViewHost}">
                    <Border VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch">

                        <ContentPresenter Content="{TemplateBinding Content}"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

