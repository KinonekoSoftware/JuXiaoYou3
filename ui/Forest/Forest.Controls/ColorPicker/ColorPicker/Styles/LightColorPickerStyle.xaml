<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="LightTabControlStyle.xaml" />
        <ResourceDictionary Source="LightTextBoxStyle.xaml" />
        <ResourceDictionary Source="LightComboBoxStyle.xaml" />
        <ResourceDictionary Source="LightColors.xaml"/>
        <ResourceDictionary Source="RoundedColorDisplayStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <Style TargetType="Label">
        <Setter Property="Foreground" Value="Black" />
    </Style>
    <Style TargetType="Grid" >
        <Style.Triggers>
            <Trigger Property="Name" Value="MainGrid">
                <Setter Property="Background" Value="#F1F1F1" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>
