                    xmlns:c="clr-namespace:Acorisoft.FutureGL.Forest.Controls"
                    xmlns:b="clr-namespace:Acorisoft.FutureGL.Forest.Controls.Buttons"
                    xmlns:f="urn:acorisoft/forest/ui">
    <Geometry x:Key="FeatherIcon.Checked">F1 M24,24z M0,0z M20,6L20,6 9,17 4,12</Geometry>    
    <GeometryGroup x:Key="FeatherIcon.Close">
        <GeometryGroup.Children>
            <LineGeometry StartPoint="18,6" EndPoint="6,18" />
            <LineGeometry StartPoint="6,6" EndPoint="18,18" />
        </GeometryGroup.Children>
    </GeometryGroup>
    
    <Style x:Key="TextBlock.DialogTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0 16 0 0"/>
    </Style>

    <DropShadowEffect x:Key="Ui.Shadow2" Direction="270" ShadowDepth="1.5" BlurRadius="8" Opacity="0.42" Color="#AA000000" />

    <Style TargetType="{x:Type c:Drawer}">
